{
  "expo": {
    "name": "MedGuard SA",
    "slug": "medguard-sa-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#2563EB"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.medguardsa.mobile",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "MedGuard SA needs camera access to scan prescription barcodes and medication labels",
        "NSMicrophoneUsageDescription": "MedGuard SA needs microphone access for voice medication reminders",
        "NSCalendarsUsageDescription": "MedGuard SA needs calendar access to schedule medication reminders",
        "NSRemindersUsageDescription": "MedGuard SA needs reminder access to set medication alerts",
        "NSLocationWhenInUseUsageDescription": "MedGuard SA needs location access to find nearby pharmacies",
        "NSFaceIDUsageDescription": "MedGuard SA uses Face ID for secure access to your medical information",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#2563EB"
      },
      "package": "com.medguardsa.mobile",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "READ_CALENDAR",
        "WRITE_CALENDAR",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "USE_FINGERPRINT",
        "USE_BIOMETRIC",
        "SCHEDULE_EXACT_ALARM"
      ],
      "networkSecurityConfig": {
        "cleartextTrafficPermitted": true
      }
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      "expo-notifications",
      "expo-calendar",
      "expo-local-authentication",
      "expo-localization",
      [
        "expo-network",
        {
          "description": "This app needs access to network to sync medical data."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#2563EB",
          "sounds": [
            "./assets/sounds/medication-reminder.wav",
            "./assets/sounds/urgent-alert.wav"
          ]
        }
      ]
    ],
    "extra": {
      "apiUrl": "https://api.medguard-sa.com",
      "wagtailApiUrl": "https://api.medguard-sa.com/api/v2",
      "eas": {
        "projectId": "66b89b4f-56df-4fd2-a12f-135b3bac185a"
      }
    }
  }
}
